@model IEnumerable<SistemaBandaEdoOaxaca.Estados>

@{
    ViewBag.Title = "Index";
}


<h2>LISTA DE ESTADOS</h2>

<p>
    @Html.ActionLink("Crear Nuevo Estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idEstado }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idEstado }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idEstado })
        </td>
    </tr>
}

</table>
